<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">


    <TextView
        android:id="@+id/nct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Chon ngay cham thi"
        android:textColor="#000"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/ngchamthi"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nct"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/btn_dropdown" />

    <TextView
        android:id="@+id/cmt"
        android:layout_below="@id/ngchamthi"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="Chọn mon thi"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_gravity="center"/>

    <Spinner
        android:id="@+id/monthi"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/cmt"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/btn_dropdown"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/ct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/monthi"
        android:layout_marginTop="90dp"
        android:text="Chọn ca thi"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"/>

    <Spinner
        android:id="@+id/cathi"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/ct"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/btn_dropdown"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/cpt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_below="@id/cathi"
        android:text="Chọn phong thi"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"/>

    <Spinner
        android:id="@+id/phongthi"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/cpt"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/btn_dropdown"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/ok"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="-1dp"
        android:background="#045DF8"
        android:text="OK"
        android:textColor="#fff"
        android:textSize="10dp"
        android:textStyle="bold" />


</RelativeLayout>